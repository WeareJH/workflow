{
    "name": "wearejh/workflow",
    "description": "Commands to help development workflow",
    "authors": [
        {
            "name": "Michael Woodward",
            "email": "michael@wearejh.com"
        }
    ],
    "require": {
        "php": "^7.1.3",
        "symfony/console": "^4.1",
        "php-di/php-di": "^5.4",
        "symfony/yaml": "^3.2",
        "symfony/process": "^3.2",
        "m1/env": "^2.1",
        "aydin-hassan/osx-rx-fswatch": "^1.0",
        "tightenco/collect": "^5.4",
        "psr/log": "^1.0",
        "myclabs/php-enum": "^1.6"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.0",
        "symfony/filesystem": "^3.3",
        "php-mock/php-mock-phpunit": "^2.0.1"
    },
    "autoload": {
        "psr-4": {
            "Jh\\Workflow\\": "src"
        },
        "files": ["src/functions.php"]
    },
    "autoload-dev": {
        "psr-4": {
            "Jh\\WorkflowTest\\": "test"
        }
    },
    "bin": [
        "bin/workflow"
    ],
    "scripts" : {
        "test": ["phpunit"]
    }
}
